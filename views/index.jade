doctype html
html(ng-app='genius-urban-youtube-app')
	head
		<!-- injector:css -->
		<!-- endinjector -->

		link(rel='stylesheet', href='css/style.css')
		
	body(md-theme="docs-dark", flex)
		div(ng-controller="baseController", layout="column", layout-align="center", flex, layout-margin)
			h1(layout="row", layout-align="center") Genius.com Instant
			h2(layout="row", layout-align="center") welcome to my incredible project ! (under construction)

			md-content(layout-align="left", class="md-padding", layout="column", layout-sm="column", style="font-size:1.2em")
				md-input-container(layout="row", layout-align="center")
					input(ng-model="youtubeUrlMusicClip", ng-change="queryArtistSongs()")
					label(layout="column")
						| youtube video clip url: 

				md-progress-circular(class="md-hue-2", md-mode="indeterminate", ng-show="toSpin", layout-align="center", style="margin:auto")

				h4(layout="row", layout-align="center", ng-show="doFail", class="_failure_message")
					| {{failExplanation}}

				div(ng-repeat="section in lyricsAndExplanations.lyrics.sections",layout="column", layout-align="center", ng-hide="toSpin", class="_genius_sections")
					h2(layout="row", layout-align="center")
						{{section.name|normalizeFilter}}
					md-button(ng-repeat="verse in section.verses", ng-mouseenter="showAlertttt($event, verse)",  ng-click="showAlert($event, verse)", layout="row", layout-align="center", class="_genius_verses md-primary")
						{{verse.content|normalizeFilter}}

		<!-- injector:js -->
		<!-- endinjector -->

		script(src='js/app.min.js')



